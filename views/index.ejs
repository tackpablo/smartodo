<main>
  <% if (user_id) { %>
  <!-- INPUT TEXT -->
  <section class="input-container">
    <form id="add-task" action="/smartlist" method="POST">
      <label for="task">TASK TO ADD</label>
      <textarea name="task" id="task-text" placeholder="Start typing here..."></textarea>
      <button type="submit">ADD</button>
    </form>
  </section>

  <!-- CATEGORIES -->
  <section class="category-container">
    <div class="category-wrapper1">
      <div class="category1">
        <h2>THINGS TO WATCH</h2>
        <div class="todolist"></div>
      </div>
    </div>
    <div class="category-wrapper2">
    <div class="category2">
      <h2>PLACES TO EAT</h2>
      <div class="todolist"></div>
    </div>
    </div>
    <div class="category-wrapper3">
    <div class="category3">
      <h2>BOOKS TO READ</h2>
      <div class="todolist"></div>
    </div>
    </div>
    <div class="category-wrapper4">
    <div class="category4">
      <h2>THINGS TO BUY</h2>
      <div class="todolist"></div>
    </div>
    </div>
    <div class="category-wrapper5">
    <div class="category5">
      <h2>MISCELLANEOUS</h2>
      <div class="todolist"></div>
    </div>
    </div>
  </section>

  <% } else { %>
    <form class="register-form" action="/users/register" method="POST">
      <div class="register-container">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>

        <label for="name"><b>Full Name</b></label>
        <input type="text" placeholder="Enter name" name="name" id="name" required>

        <label for="password"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="password" id="password" required>

        <label for="email"><b>Email</b></label>
        <input type="email" placeholder="Enter Email" name="email" id="email" required>
        <hr>

        <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
        <button type="submit" class="registerbtn">Register</button>
      </div>

      <div class="register-container signin">
        <p>Already have an account? <a href="#">Sign in</a>.</p>
      </div>
    </form>

<!-- USER LOGIN -->
<form class="register-form" action="/users/register" method="POST">
  <div class="register-container">
    <h1>Login</h1>
    <p>Please fill in this form to log in.</p>
    <hr>

    <label for="email"><b>Email</b></label>
    <input type="email" placeholder="Enter Email" name="email" id="email" required>
    <hr>

    <label for="password"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="password" id="password" required>


    <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
    <button type="submit" class="registerbtn">Register</button>
  </div>

  <div class="register-container signin">
    <p>Don't have an account? <a href="#">Register</a>.</p>
  </div>
</form>
<% } %>

