<!DOCTYPE html>
<html lang="en">

<head>
  <title>Smartodo</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<!-- NAV BAR -->
<header>
  <div class="nav-container">
    <div class="logo">
      <img src="https://www.graphicsprings.com/filestorage/stencils/ed8fe22e267f227c5be2d9c9a6b40917.png?width=500&height=500" alt="smartodo logo" width="130"/>
      </div>
    <nav>
      <% if (user_id) { %>
      <ul>
        <li>${user_name}</li>
        <form id="logout" action="/users/logout" method="POST">
          <button >Logout</button>
        </form>
      </ul>
      <% } else { %>
        <ul>
          <form id="login" action="/users/login" method="POST">
            <button>Login</button>
          </form>
        </ul>
      </nav>
      <% } %>
  </div>
</header>

<body>
<main>
  <% if (user_id) { %>
  <!-- INPUT TEXT -->
  <section class="input-container">
    <form id="add-task" action="/smartlist" method="POST">
      <label for="task">TASK TO ADD</label>
      <textarea name="task" id="task-text" placeholder="Start typing here..."></textarea>
      <button type="submit">ADD</button>
    </form>
  </section>

  <!-- CATEGORIES -->
  <section class="category-container">
    <div class="category-wrapper1">
      <div class="category1">
        <h2>THINGS TO WATCH</h2>
        <div class="todolist"></div>
      </div>
    </div>
    <div class="category-wrapper2">
    <div class="category2">
      <h2>PLACES TO EAT</h2>
      <div class="todolist"></div>
    </div>
    </div>
    <div class="category-wrapper3">
    <div class="category3">
      <h2>BOOKS TO READ</h2>
      <div class="todolist"></div>
    </div>
    </div>
    <div class="category-wrapper4">
    <div class="category4">
      <h2>THINGS TO BUY</h2>
      <div class="todolist"></div>
    </div>
    </div>
    <div class="category-wrapper5">
    <div class="category5">
      <h2>MISCELLANEOUS</h2>
      <div class="todolist"></div>
    </div>
    </div>
  </section>

  <% } else { %>
    <form class="register-form" action="/users/register" method="POST">
      <div class="register-container">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>

        <label for="name"><b>Full Name</b></label>
        <input type="text" placeholder="Enter name" name="name" id="name" required>

        <label for="password"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="password" id="password" required>

        <label for="email"><b>Email</b></label>
        <input type="email" placeholder="Enter Email" name="email" id="email" required>
        <hr>

        <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
        <button type="submit" class="registerbtn">Register</button>
      </div>

      <div class="register-container signin">
        <p>Already have an account? <a href="#">Sign in</a>.</p>
      </div>
    </form>
  <% } %>
  <!-- TASK -->
  <!-- <section class="todo-container">
    <div class="todoitems">
      <p class="task-name">TASK NAME</p>
      <div class="todo-options">
      <div class="dropdown">
        <button class="dropbtn">Dropdown</button>
        <div class="dropdown-content">
        <a href="#">THINGS TO WATCH</a>
        <a href="#">PLACES TO EAT</a>
        <a href="#">BOOKS TO READ</a>
        <a href="#">THINGS TO BUY</a>
        <a href="#">MISCELLANEOUS</a>
        </div>
      </div>
        <form id="delete-task" action="/smartlist/:id/delete" method="POST">
        <button type="submit">DELETE</button>
      </div>
    </div>
  </section> -->

</main>
</body>

</html>
